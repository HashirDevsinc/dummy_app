<!DOCTYPE html>
<html>
  <head>
    <title>DummyApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'admins/admin', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'admins/admin', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= render 'layouts/admin_header' %>
    <% if admin_signed_in? %>
      <%= render 'layouts/admin_sidebar' %>
    <% end %>
    <!-- Page Content -->
    <div style="margin-left:10%">
    
    <div class="container">
      
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
    <%= yield %>

    </div>
  </body>
</html>
