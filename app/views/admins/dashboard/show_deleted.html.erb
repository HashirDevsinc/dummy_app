<div>
	<h3>Deleted Comments</h3>
	<ul>
		<table class="table">
		 	<thead class="thead-dark">
		 		<tr>
			    <th>Coment Content</th>
			    <th>Post Title</th>
			    <th>Reporters</th>
		  	</tr>
			</thead>
			
			<% @deleted_comments.each do |comment| %>
				<tr>
				  <td><%= comment.content %></td>
				  <td>
				  	<% if comment.post.present? %>
				  		<%= comment.post.title %>
				  	<% elsif Post.only_deleted.find(comment.post_id).present? %>
				  		<%= Post.only_deleted.find(comment.post_id).title %>
				  	<% else %> Anonymous Post
				  	<% end %>
				  </td>
				  <td>
				  	<% comment.reporters.each do |reporter| %>
				  		<%= reporter.email %><br> 
				  	<% end %>
				  </td>
				</tr>
			<% end %>
		</table>
	</ul>
</div>
<div>
	<h3>Deleted Posts</h3>
	<ul>
		<table class="table">
		 	<thead class="thead-dark">
		 		<tr>
			    <th>Post Title</th>
			    <th>Post Body</th>
			    <th>User</th>
		  	</tr>
			</thead>
			
			<% @deleted_posts.each do |post| %>
				<tr>
				  <td><%= post.title %></td>
				  <td><%= post.body %></td>
				  <td><%= post.user.email %></td>
				</tr>
			<% end %>
		</table>
	</ul>
</div>