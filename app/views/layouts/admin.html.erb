<!DOCTYPE html>
<html>
  <head>
    <title>DummyApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'admins/admin', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "admin" %>
    <%= javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>
    <%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js' %>
  </head>

  <body>

    <%= render 'layouts/admin_header' %>
    <% if admin_signed_in? %>
      <%= render 'layouts/admin_sidebar' %>
    <% end %>
    <!-- Page Content -->
    <div style="margin-left:13%">
    
      <div class="container">
        
        <% if notice %>
          <p class="alert alert-success"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
      <%= yield %>
      </div>

    </div>
  </body>
</html>
