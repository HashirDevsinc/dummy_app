<h1>Add New Post</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">

		<%= form_for(@post) do |f| %>

			<%= render 'shared/errors', object: f.object %>

			<%= f.label :title %>
			<%= f.text_field :title, class: 'form-control' %>
			
			<%= f.label :body %>
			<%= f.text_area :body, class: 'form-control' %>

			<%= f.submit "Add Post", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>